# Created by NickDonnOS

# launcher (apps)
super + e
  rofi -show drun -theme ${HOME}/.config/rofi/teal.rasi 
# eww widget 
super + d
    sh $HOME/.local/bin/dashboard
# ----
# application
# ----

# terminal
super + Return
  urxvt

# screenshot app
Print
  flameshot gui



# editor
super + p
  kitty -e vim
#  install neovim

# ------
# system
# ------

# sxhkd reload
super + Escape
	pkill -USR1 -x sxhkd

# quit/restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}

# lock the system
super + l
  i3lock-fancy

# ----------
# Workspaces
# ----------

# move current window to another workspace
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'paces 

# focus the next/previous desktop in the current monitor
super + {Page_Down, Page_Up}
  bspc desktop -f {prev,next}

# -----------------
# Window Management
# -----------------

# change window state to floating or tiled
super + Tab
  bspc node -t {floating,tiled}

# close window
super + {_,shift + }q
  bspc node -{c,k}

# change focus for next window
alt + Tab
  bspc node -f next.local.!hidden.window

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# volumectl
XF86Audio{RaiseVolume,LowerVolume,Mute}
	${HOME}/.scripts/change-volume {up,down,mute}

# brightnessctl
XF86MonBrightness{Down,Up}
	${HOME}/.scripts/change-brightness {down,up}


# resize a window
super + ctrl + {Up,Down,Left,Right}
  {bspc node -z top 10 10; bspc node -z bottom -10 -10, bspc node -z bottom 10 10; bspc node -z top -10 -10, bspc node -z left 10 10; bspc node -z right -10 -10, bspc node -z right 10 10; bspc node -z left -10 -10 }
#thats all, thanks..